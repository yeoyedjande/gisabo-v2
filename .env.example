# Base de données PostgreSQL
# Pour Digital Ocean App Platform (auto-configuré)
DATABASE_URL="postgresql://user:password@localhost:5432/gisabo"

# Pour Droplet/Docker (configuration manuelle)
PGHOST=postgres
PGPORT=5432
PGDATABASE=gisabo
PGUSER=gisabo_user
PGPASSWORD=your_secure_database_password_here

# Pour production Digital Ocean Managed Database
# DATABASE_URL="postgresql://doadmin:password@gisabo-db-do-user-xxx-0.db.ondigitalocean.com:25060/defaultdb?sslmode=require"

# Configuration Square (Paiements)
SQUARE_ACCESS_TOKEN=your_square_access_token_here
SQUARE_APPLICATION_ID=your_square_application_id_here
SQUARE_LOCATION_ID=your_square_location_id_here
SQUARE_ENVIRONMENT=sandbox
# Variables côté client (doivent commencer par VITE_)
VITE_SQUARE_APPLICATION_ID=your_square_application_id_here
VITE_SQUARE_LOCATION_ID=your_square_location_id_here

# Email (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Session et Sécurité
SESSION_SECRET=your_very_secure_session_secret_here

# Environnement
NODE_ENV=development